<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FactPackInfoActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" >

        <ImageView
            android:id="@+id/factpack_icon"
            android:layout_width="80dip"
            android:layout_height="80dip" />

        <TextView
            android:id="@+id/factpack_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/factpack_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="true" />
    
    <LinearLayout
        android:id="@+id/factpack_indicators"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        
     <TextView
        android:id="@+id/factpack_indicators_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"  
        /> 
        

    </LinearLayout>

    <LinearLayout
        android:id="@+id/factpack_paid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fact_pack_info_access"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3E7E03" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/factpack_subscribe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/gold_button"
            android:onClick="onGoldButtonClicked"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gold Membership" />

        <Button
            android:id="@+id/silver_button"
            android:onClick="onSilverButtonClicked"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Silver Membership" />
        
        <Button
            android:id="@+id/bronze_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onBronzeButtonClicked"
            android:text="Bronze Membership" />

    </LinearLayout>

</LinearLayout>

</ScrollView>